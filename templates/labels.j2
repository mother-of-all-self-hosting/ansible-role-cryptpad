{% if cryptpad_container_labels_traefik_enabled %}
traefik.enable=true

{% if cryptpad_container_labels_traefik_docker_network %}
traefik.docker.network={{ cryptpad_container_labels_traefik_docker_network }}
{% endif %}

{% set middlewares = [] %}

{% if cryptpad_container_labels_traefik_additional_request_headers.keys() | length > 0 %}
{% for name, value in cryptpad_container_labels_traefik_additional_request_headers.items() %}
traefik.http.middlewares.{{ cryptpad_identifier }}-add-request-headers.headers.customrequestheaders.{{ name }}={{ value }}
{% endfor %}
{% set middlewares = middlewares + [cryptpad_identifier + '-add-request-headers'] %}
{% endif %}

{% if cryptpad_container_labels_traefik_additional_response_headers.keys() | length > 0 %}
{% for name, value in cryptpad_container_labels_traefik_additional_response_headers.items() %}
traefik.http.middlewares.{{ cryptpad_identifier }}-add-response-headers.headers.customresponseheaders.{{ name }}={{ value }}
{% endfor %}
{% set middlewares = middlewares + [cryptpad_identifier + '-add-response-headers'] %}
{% endif %}

traefik.http.routers.{{ cryptpad_identifier }}.rule={{ cryptpad_container_labels_traefik_rule }}
{% if cryptpad_container_labels_traefik_priority | int > 0 %}
traefik.http.routers.{{ cryptpad_identifier }}.priority={{ cryptpad_container_labels_traefik_priority }}
{% endif %}
traefik.http.routers.{{ cryptpad_identifier }}.service={{ cryptpad_identifier }}
{% if middlewares | length > 0 %}
traefik.http.routers.{{ cryptpad_identifier }}.middlewares={{ middlewares | join(',') }}
{% endif %}
traefik.http.routers.{{ cryptpad_identifier }}.entrypoints={{ cryptpad_container_labels_traefik_entrypoints }}
traefik.http.routers.{{ cryptpad_identifier }}.tls={{ cryptpad_container_labels_traefik_tls | to_json }}
{% if cryptpad_container_labels_traefik_tls %}
traefik.http.routers.{{ cryptpad_identifier }}.tls.certResolver={{ cryptpad_container_labels_traefik_tls_certResolver }}
traefik.http.routers.{{ cryptpad_identifier }}.tls.domains[0].main={{ cryptpad_main_container_labels_traefik_hostname }}
traefik.http.routers.{{ cryptpad_identifier }}.tls.domains[0].sans={{ cryptpad_sandbox_container_labels_traefik_hostname }}
{% endif %}

traefik.http.services.{{ cryptpad_identifier }}.loadbalancer.server.port={{ cryptpad_main_container_port }}

{% endif %}

{% for arg in cryptpad_container_labels_additional_labels %}
{{ arg }}
{% endfor %}
